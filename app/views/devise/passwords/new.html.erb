<div class="container">
  <div class="row">
     <div class="col-sm-8 col-md-8 col-lg-8 text-center">

          <h1>Demandez un lien de réinitialisation de votre mot de passe</h1> </div>
          <div class="col-sm-4 col-md-4 col-lg-4 text-center">
            <div class="jumbotron">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= devise_error_messages! %>

                <div class="field">
                  <%= f.label :" " %><br />
                  <%= f.email_field :email, autofocus: true, placeholder: "Votre e-mail ici..." %>
                </div>

                </br>
                <div class="actions">
                  <%= f.submit "Réinitialiser", :class=> "btn btn-success"%>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
  </div>
</div>